<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cast_intro_overlay_button_background_color"
    tools:context="cs65.confuse.ChangePassword">


    <Button
        android:id="@+id/confirm_but"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_change_password2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="right"
        android:layout_marginTop="100dp"
        android:layout_weight="1"
        android:includeFontPadding="false"
        android:text="Confirm"
        android:textColor="#614051"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txt_change_password2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="Enter new password"
        android:imeOptions="actionDone"
        android:inputType="text" />
</RelativeLayout>
